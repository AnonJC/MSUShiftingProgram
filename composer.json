{
    "name": "AnonJC/MSUShiftingProgram",
    "description": "The Laravel Base Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "~7.2.7",
        "barryvdh/laravel-cors": "^0.11.2",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.6.*",
        "nwidart/laravel-modules": "^3.0",
        "roave/security-advisories": "dev-master",
        "yajra/laravel-datatables-oracle": "~8.0"
    },
    "require-dev": {
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "laravel/tinker": "^1.0",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0",
        "sebastian/phpcpd": "^4.1",
        "zendframework/zend-coding-standard": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "MnkyDevTeam\\": "modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "check": [
            "@clean",
            "@cs:check",
            "@check:cpd",
            "@test"
        ],
        "clean": [
            "php artisan view:clear",
            "php artisan config:clear",
            "php artisan cache:clear"
        ],
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "check:cpd": "phpcpd --exclude=vendor,public,bootstrap,config --fuzzy app tests database",
        "test": "phpunit --verbose --color=always"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
